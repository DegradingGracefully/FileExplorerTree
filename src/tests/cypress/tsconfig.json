// from https://docs.cypress.io/guides/tooling/typescript-support
{
    "compilerOptions": {
        "importsNotUsedAsValues": "error",
        "ignoreDeprecations": "5.0", // we don't want to see the warnings about 5.5 syntax for now
        "isolatedModules": true,
        "preserveValueImports": true,
        "lib": [
            //"esnext", 
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "module": "ES2020",
        "target": "ES2020",
        "types": [
            "cypress",
            "node"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}